version: '3'
services:
  nginx:
    image: docker.io/nginx:1.29-alpine
    restart: always
    ports:
      - '80:80'
      - '443:443'
      - '8883:8883'
    volumes:
      - ~/nginx:/etc/nginx
      - /etc/letsencrypt:/etc/letsencrypt:ro
    depends_on:
      - nano-iot
      - frontend
  nano-iot:
    image: ghcr.io/hevali/nano-iot
    restart: always
    pull_policy: always
    env_file: ~/nano-iot/.env
    volumes:
      - ~/nano-iot/data:/data
      - /etc/letsencrypt/live/${hostname}/fullchain.pem:/certs/server.crt:ro
      - /etc/letsencrypt/live/${hostname}/privkey.pem:/certs/server.key:ro
  frontend:
    image: ghcr.io/hevali/frontend
    restart: always
    pull_policy: always
